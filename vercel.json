{
  "version": 2,
  "builds": [
    {
      "src": "next.config.js",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/wordpress/(.*)",
      "dest": "/api/wordpress/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "api/wordpress/**/*.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  }
}

